<div class="container">
  <div class="row m-y-2">
    <div class="col-lg-8 push-lg-4">
      <div class="tab-content p-b-3">
        <div id="profile">
            <h4 class="m-y-2">User Profile</h4>
            <div class="row">
              <div class="col-md-6">
                <h6>Name: <%= @user.full_name %></h6>
                <h6>Company: <%=@user.company.name %></h6>
                <h6>Email: <%=@user.email %></h6>
              </div>
              <div class="col-md-6">
              </div>
              <div class="col-md-12">
                <h4 class="m-t-2"><span class="fa fa-clock-o ion-clock pull-xs-right"></span> Recent Job Postings</h4>
                <table class="table table-hover table-striped">
                    <tbody>
                      <% @user.job_postings.each do |posting| %>
                         <tr>
                            <td>
                              <strong><%= posting.title %></strong> <%= posting.type %> <strong> <%= posting.created_at %></strong>
                            </td>
                        </tr>
                      <% end %>
                    </tbody>
                </table>
              </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-4 pull-lg-8 text-xs-center">
      <%= image_tag(@user.icon, size: "150x150", alt: "avatar") %>
    </div>
  </div>
</div>
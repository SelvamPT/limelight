<section class="login-block">
    <div class="container">
        <div class="row">
            <div class="col-md-4 login-sec">
                <h2 class="text-center">Welcome, please login to continue</h2>
                <form class="login-form">
                    <div class="form-group">
                        <%= link_to login_path, class: "btn btn-block btn-social btn-primary googleSignUp" do %>
                            <%= image_tag "google.svg", class: "google-svg" %>
                            <span>Continue with Google</span>
                        <% end %>
                    </div>
                    <hr>
                    <p class="text-center">or</p>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Enter your work email to continue</label>
                        <input type="text" class="form-control" placeholder="">
                    </div>

                    <div class="form-check">
                        <label class="form-check-label">
                            <input type="checkbox" class="form-check-input">
                            <small>Remember Me</small>
                        </label>
                            <%= link_to "Next", login_path, class: "btn btn-primary float-right" %>
                    </div>
                </form>
            </div>
            <div class="col-md-8 banner-sec">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active">
                            <%= image_tag("px1.jpg", class: "d-block img-fluid", alt: "First slide") %>
                            <div class="carousel-caption d-none d-md-block">
                                <div class="banner-text">
                                    <h2>Make data-driven decisions</h2>
                                    <p>Always keep track of the numbers that matter. With quick, flexible reports and interactive dashboards, you're never far from the insights you need to power a top-notch recruiting strategy.</p>
                                </div>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <%= image_tag("px2.jpg", class: "d-block img-fluid", alt: "First slide") %>
                            <div class="carousel-caption d-none d-md-block">
                                <div class="banner-text">
                                    <h2>Proactively engage the best talent</h2>
                                    <p>Discover and reach the top candidates that aren't yet looking, all in just a few clicks. With our simple browser extension, your entire team can start sourcing and referring rockstars.</p>
                                </div>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <%= image_tag("px3.jpg", class: "d-block img-fluid", alt: "First slide") %>
                            <div class="carousel-caption d-none d-md-block">
                                <div class="banner-text">
                                    <h2>Streamline your interview process</h2>
                                    <p>Drive an end-to-end recruiting process with ease. Limelight takes care of the busy work and minimizes manual effort, so you can spend more time giving every candidate a stellar experience.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .googleSignUp {
        line-height: normal;
        text-align: center;
        justify-content: space-between;
        letter-spacing: .25px;
        border-radius: 4px;
    }

    .google-svg {
        padding: 3px 3px 3px 3px;
    }

    .login-block {
        background: #DE6262;

        /* fallback for old browsers */
        background: -webkit-linear-gradient(to bottom, #00C9FF,  #92FE9D);

        /* Chrome 10-25, Safari 5.1-6 */
        background: linear-gradient(to bottom, #00C9FF,  #92FE9D);

        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        float: left;
        width: 100%;
        padding: 5% 0 25% 0;
    }

    .banner-sec {
        background: url(px1.jpg) no-repeat left bottom;
        background-size: cover;
        min-height: 500px;
        border-radius: 0 10px 10px 0;
        padding: 0;
    }

    .login-block .container {
        background: #fff;
        border-radius: 10px;
        box-shadow: 15px 20px 0px rgba(0, 0, 0, 0.1);
    }

    .carousel-inner {
        border-radius: 0 10px 10px 0;
    }

    .carousel-caption {
        text-align: left;
        left: 5%;
    }

    .login-sec {
        padding: 50px 30px;
        position: relative;
    }

    .login-sec .copy-text {
        position: absolute;
        width: 80%;
        bottom: 20px;
        font-size: 13px;
        text-align: center;
    }

    .login-sec .copy-text i {
        color: #FEB58A;
    }

    .login-sec .copy-text a {
        color: #E36262;
    }

    .login-sec h2 {
        margin-bottom: 30px;
        font-weight: 800;
        font-size: 30px;
        color: #080808;
    }

    .login-sec h2:after {
        content: " ";
        width: 100px;
        height: 5px;
        background: #080808;
        display: block;
        margin-top: 20px;
        border-radius: 3px;
        margin-left: auto;
        margin-right: auto;
    }

    .btn-login {
        background: #080808;
        color: #fff;
        font-weight: 600;
    }

    .banner-text {
        text-shadow: 0px 0px 3px #000;
        width: 70%;
        position: absolute;
        bottom: 40px;
        padding-left: 20px;
    }

    .banner-text h2 {
        color: #fff;
        font-weight: 600;
    }

    .banner-text h2:after {
        content: " ";
        width: 100px;
        height: 5px;
        background: #FFF;
        display: block;
        margin-top: 20px;
        border-radius: 3px;
    }

    .banner-text p {
        color: #fff;
    }
</style>

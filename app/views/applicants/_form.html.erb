<%= bootstrap_form_with(model: applicant,url: job_posting_applicants_path(@job_posting), local: true) do |form| %>
  <% if applicant.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(applicant.errors.count, "error") %> prohibited this applicant from being saved:</h2>
    <ul>
      <% applicant.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="col-sm-12">
    <div class="form-group">
      <div class="col-sm-6 form-group">
        <%= form.file_field :resume, label: "Resume" %>
      </div>
      <div class="col-sm-6 form-group">
        <%= form.text_field :first_name, label: "First Name" %>
      </div>
      <div class="col-sm-6 form-group">
        <%= form.text_field :last_name, label: "Last Name" %>
      </div>
      <div class="col-sm-6 form-group">
        <%= form.text_field :email, label: "Email" %>
      </div>
      <div class="col-sm-6 form-group">
        <%= form.text_field :phone_number, label: "Phone" %>
      </div>
      <div class="col-sm-6 form-group">
        <%= form.text_field :linkedin_url, label: "Linkedin URL" %>
      </div>
      <div class="col-sm-6 form-group">
        <%= form.text_field :website_url, label: "Portfolio URL" %>
      </div>
    </div>
    <div class = "form-group">
      <div class = "col-sm-12">
        <div class="form-actions">
          <div class="actions" >
            <%= form.submit "Apply" %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
